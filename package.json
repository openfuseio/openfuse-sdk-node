{
  "name": "@openfuseio/sdk",
  "version": "0.3.0",
  "description": "Openfuse SDK for Node.js - Circuit breaker management with zero runtime dependencies",
  "license": "Elastic-2.0",
  "author": "Openfuse <rodrigo@openfuse.io>",
  "homepage": "https://openfuse.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openfuseio/openfuse-sdk-node.git"
  },
  "bugs": {
    "url": "https://github.com/openfuseio/openfuse-sdk-node/issues"
  },
  "keywords": [
    "openfuse",
    "circuit-breaker",
    "breaker",
    "timeout",
    "chaos",
    "resilience",
    "sdk"
  ],
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18.3.0"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean",
    "dev": "tsup src/index.ts --watch --dts --format esm,cjs",
    "lint": "eslint .",
    "format": "prettier . --write",
    "test": "vitest",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "e2e:local": "tsx examples/local-e2e.ts",
    "prepare": "husky",
    "git:commit": "git-cz"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix",
    "*.{ts,js,json,md}": "prettier --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^9.9.0",
    "@tsconfig/node-ts": "^23.6.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "tsup": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
